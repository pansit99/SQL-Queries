--CREATE NEW TABLE CONTAINING FOR CORRECTIVE INPUTS IN VARIOUS FIELDS
--PARTICULARLY USEFUL FOR PORT_NAME AND INSPECTED_BY
CREATE TABLE TBL_corrections (CORRECTION_FOR varchar(300) 
                            , INPUT_VALUE varchar(300) 
                            , CORRECTED_VALUE varchar(300));

--ADD A UNIQUE-FOR-THREE-COLUMN CONSTRAINT 
ALTER TABLE TBL_corrections
  ADD CONSTRAINT UNIQUE_COLUMN_WIDE UNIQUE(CORRECTION_FOR, INPUT_VALUE, CORRECTED_VALUE);
  
--ADD A CONSTRAINT ON CORRECTION_FOR TO ALLOW ONLY ALLOW VALUES IF PORT_NAME, INSP_BY, OR TYPE
ALTER TABLE TBL_corrections
  ADD CONSTRAINT CORRECTION_FOR_CHECKER 
		CHECK (CORRECTION_FOR IN ('PORT_NAME', 'INSP_BY', 'TYPE'));
