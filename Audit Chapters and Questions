-- LIST OF AUDIT CHAPTERS AND QUESTIONS
-- THIS ONE IS SPECIFICALLY FOR 'PSC'

SELECT AUD.AUDITTYPE_ID AS AUDIT_ID
	 , AUD.AUDITTYPE_DESCR AS AUDIT_DESCR
	 , NC.NCCHAPTER_ID AS CHAPTER_ID
	 , NC.NCCHAPTER_DESCR AS CHAPTER_DESCR
	 , NCC.NCCHAPTERQUESTION_ID AS QUESTION_ID
	 , NCC.NCCHAPTERQUESTION_DESCR AS QUESTION_DESCR
FROM ST_NCCHAPTER AS NC
INNER JOIN ST_AUDITTYPE AS AUD ON AUD.AUDITTYPE_ID = NC.AUDITTYPE_ID
INNER JOIN ST_NCCHAPTERQUESTION AS NCC ON NCC.NCCHAPTER_ID = NC.NCCHAPTER_ID AND NCC.AUDITTYPE_ID = NC.AUDITTYPE_ID
WHERE NC.Rec_Deleted = 0 
	AND AUD.Rec_Deleted = 0 
	AND NCC.Rec_Deleted = 0 
	AND AUD.AUDITTYPE_ID = 'PSC';
